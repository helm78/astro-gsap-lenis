  </div>
</div>

<script>
  document.addEventListener("astro:page-load", () => {
    window.gsap.timeline({
      scrollTrigger: {
        trigger: ".home-intro",
        start: "top bottom",
        end: "bottom bottom",
        scrub: true,
      },
    })
    .from(".home-intro__wrapper", {
      x: -50,
      rotate: 15,
      duration: 1,
      transformOrigin: "left top",
      ease: "power1.out",
    })
    .to(".home-intro__wrapper", {
      x: -50,
      rotate: -5,
      duration: 1,
      transformOrigin: "left bottom",
      delay: 0.5,
      ease: "power1.in",
    });
  })

</script>

