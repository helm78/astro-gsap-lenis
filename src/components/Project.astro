---
  const { title, videoSrc, index } = Astro.props;
---
<section class={`project-container project-container-${index}`} data-index={index} style={`margin-top: ${index === 0 ? '0' : '-25vh'}`}>
  <div class={`project-wrapper project-wrapper-${index}`}>
    <div class="project-info">
      <div class="project-info__wrapper">
        <div class="module-subtitle-title">
          <h2>{title}</h2>
        </div>
      </div>
      <div class="project-media">
        <div class="project-video">
          <figure>
            <video
              height="900"
              width="1600"
              playsinline=""
              muted=""
              controlslist="nodownload noplaybackrate"
              disablepictureinpicture=""
              src={videoSrc}
            ></video>
          </figure>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .project-container {
    min-height: 100dvh;
    position: relative;
  }
  .project-wrapper {
    width: 100%;
    background-color: rgba(222, 223, 227, 0.9);
  }
  .project-info {
    height: 100%;
    width: 100%;
  }
  .module-subtitle-title h2 {
    padding-top: 30px;
    padding-left: 5px;
    font-size: 5.55556vw;
    font-weight: 470;
    letter-spacing: -.04em;
    line-height: .8;
  }
  .project-media {
    position: relative;
  }
  .project-video {
    height: 110vh;
    width: 100%;
    padding: 50px 0;
  }
  .home-hero__sticky figure {
    height: 100%;
    width: 100%;
  }
  .project-media video {
    height: 100%;
    object-fit: cover;
    width: 100%;
  }
</style>
